<table class="table table-bordered">

<div class="control-group">
  <a href="/todos/new" class="btn btn-primary">Add todo</a>
</div>
     <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th>Created</th>
            <th>Completed</th>
            <th>Done</th>
            <th>Actions</th>
        </tr>
     </thead>
     <tbody>
      <% @todos.each do |todo| %>
        <tr>
          <td><%= todo[:title] %></td>
          <td><%= todo[:completed] ? "<del>#{todo[:body]}</del>" : todo[:body] %></td>
          <td><%= pretty_date(todo[:created_at]) %></td>
          <td><%= pretty_date(todo[:completed]) %></td>
          <td>
            <% if todo[:done] %>
              <span class="label label-success">Completed</span>
            <% else %>
              <span class="label label-warning">Pending</span>
            <% end %>
          </td>
          <td><a href="/todos/edit/<%= todo[:title] %>" class="btn btn-primary">Edit</a>
              <a href="/todos/delete/<%= todo[:title] %>" class="btn btn-danger">Delete</a>
          </td>              
        </tr>
      <% end %>
     </tbody>
</table>